#linear_gradient.content__item
  h2.content__item_header Linear gradient
  .columns
    .columns__col.columns__col_left
      .checkbox-input-group
        label(for='gradient_repeating') Repeating
        input#gradient_repeating(type='checkbox')
      .slider-input-group
        label(for='gradient_angle') Angle
        input#gradient_angle(type='range' min='0' max='360' step='1' value='0')
        input.input-number(type='number' min='0' max='360' value='0')
      .colors
        .add-color
          h3 Colors
          button#gradient_add_color.icon-button.icon-button_round-border(type='button' title='add color')
            svg(viewbox='0 0 24 24' width='20' height='20')
              path(d='M23,11H13V1a1,1,0,0,0-1-1h0a1,1,0,0,0-1,1V11H1a1,1,0,0,0-1,1H0a1,1,0,0,0,1,1H11V23a1,1,0,0,0,1,1h0a1,1,0,0,0,1-1V13H23a1,1,0,0,0,1-1h0A1,1,0,0,0,23,11Z')
        .color-inputs
          .color-input-group
            .color-input
              label(for='gradient_color_1') Color
              input#gradient_color_1(type='color' value='#0000ff')
            .stop-input
              label(for='gradient_stop_1') Stop
              input#gradient_stop_1(type='range' min='0' max='100' step='1' value='0')
              input.input-number(type='number' min='0' max='100' value='0')
            +deleteButton('delete-color')
          .color-input-group
            .color-input
              label(for='gradient_color_2') Color
              input#gradient_color_2(type='color' value='#ff0000')
            .stop-input
              label(for='gradient_stop_2') Stop
              input#gradient_stop_2(type='range' min='0' max='100' step='1' value='100')
              input.input-number(type='number' min='0' max='100' value='0')
            +deleteButton('delete-color')
    .columns__col
      #gradient_result.result-vue
      .result-codes
        .result-code
          h3 Style

          code#gradient_result_code.result-code__code
          button.icon-button.result-code__icon-button(type='button' title='copy' data-id='gradient_result_code')
